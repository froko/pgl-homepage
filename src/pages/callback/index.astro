---
import Layout from 'src/layouts/Layout.astro';
---

<Layout title="PGL | Intern" />

<script>
  const payload = document.URL.split('#')[1];
  if (payload.startsWith('access_token')) {
    const expiresAt = 60 * 1000 + new Date().getTime();
    sessionStorage.setItem('expires_at', JSON.stringify(expiresAt));
    location.assign('/intern');
  }
</script>
