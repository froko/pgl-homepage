---
import { Download } from 'src/components/icons';
import type { TypeInternNotenFields } from 'src/contentful';
import ContentService from 'src/lib/contentful';

const notenEntries = (await ContentService.instance.getEntriesByType<TypeInternNotenFields>('internNoten')).map(
  (entry) => entry.fields
);
---

<h2>Noten</h2>
{
  notenEntries.map((noten) => (
    <div class="flex w-full p-1 odd:bg-slate-100 even:bg-white hover:bg-slate-200">
      <span>{noten.titel}</span>
      <span class="grow" />
      <span
        data-title={noten.dokument.fields.file.fileName}
        data-src={noten.dokument.fields.file.url}
        class="download mt-[4px] duration-300 md:hover:scale-125 md:hover:cursor-pointer"
      >
        <Download />
      </span>
    </div>
  ))
}
