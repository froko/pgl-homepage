---
import { ads } from '@pgl/data'
---

<section id="hero" class="relative bg-pgl-blue">
  <div
    class="mx-auto hidden gap-4 px-8 pt-28 lg:flex lg:max-w-4xl xl:lg:max-w-6xl">
    <img
      src="gesamtfoto2025.webp"
      alt="Gesamtfoto"
      class="mx-auto hidden -rotate-6 rounded-xl shadow-xl lg:block lg:max-w-xl xl:max-w-2xl"
    />
    <div>
      <img src="/hero.png" alt="logo" class="mx-auto h-56" />
      <div class="mt-2 text-center text-2xl font-bold text-white">
        <p>Fasnacht im Herzen.</p>
        <p>Seit 1961.</p>
      </div>
    </div>
  </div>
  <div class="container flex justify-around lg:hidden">
    <div>
      <img src="/hero.png" alt="logo" class="mx-auto mt-12 h-48" />
      <div class="mt-2 text-center text-2xl font-bold text-white">
        <p>Fasnacht im Herzen.</p>
        <p>Seit 1961.</p>
      </div>
    </div>
  </div>

  <div class="py-2">
    <div class="flex flex-wrap justify-center lg:pt-12">
      {
        ads.map((ad) => (
          <a href={ad.href}>
            <img
              src={'/ads/' + ad.src}
              alt={ad.alt}
              height="64px"
              class="m-1 h-12 rounded-md bg-white p-2 shadow-lg hover:drop-shadow-xl lg:m-2 lg:h-16"
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
