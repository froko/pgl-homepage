---
import Cart from './cart'
import FacebookLogo from './facebook-logo'
import GuestbookLogo from './guestbook-logo'
import Hamburger from './hamburger'
import Navigation from './navigation'
import SpotifyLogo from './spotify-logo'
---

<>
  <header
    class="fixed top-0 z-20 flex h-16 w-full items-center justify-between bg-white bg-opacity-20 px-2 backdrop-blur-lg backdrop-filter md:px-4">
    <a href="/">
      <img src="/header.png" alt="header" class="h-3 w-auto md:h-8" />
    </a>
    <div class="grow"></div>
    <Cart client:load />
    <GuestbookLogo client:load />
    <FacebookLogo client:load />
    <SpotifyLogo client:load />
    <Hamburger client:load />
  </header>
  <Navigation client:load />
</>
